<Window x:Class="APIApp.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Age Predictor" Height="200" Width="400">  
    <Grid Margin="10">  
        <StackPanel>  
            <!-- Fix: Replace 'PlaceholderText' with 'ToolTip' as WPF TextBox does not support 'PlaceholderText'. -->  
            <TextBox x:Name="NameInput" Width="200" Height="30" Margin="0,0,0,10" ToolTip="Enter name"/>  
            <Button Content="Predict Age" Width="100" Click="OnPredictClick"/>  
            <TextBlock x:Name="ResultText" Margin="0,10,0,0" FontSize="16"/>  
        </StackPanel>  
    </Grid>  
</Window>
